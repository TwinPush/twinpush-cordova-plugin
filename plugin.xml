<?xml version='1.0' encoding='utf-8'?>
<plugin id="twinpush-plugin" version="1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
	<name>twinpush</name>
	<js-module name="twinpush" src="www/twinpush.js">
		<clobbers target="cordova.plugins.twinpush"/>
	</js-module>
	<platform name="ios">
		<config-file parent="/*" target="config.xml">
			<feature name="twinpush">
				<param name="ios-package" value="twinpush"/>
			</feature>
		</config-file>
		<source-file src="src/ios/twinpush.m"/>
		<framework src="TwinPushSDK" type="podspec" spec="2.2.0"/>
	</platform>
</plugin>